Concept Extension Sp_Checking_Ops
    for
      Bdd_Spiral_Template;

  Operation At_Center (restores P : Spiral_Pos)
                : Std_Bools :: Boolean;
      ensures At_Center = (P.Curr_Loc = Cen(k));

  Operation At_End (restores P : Spiral_Pos)
                : Std_Bools :: Boolean;
      ensures At_End =
            (P.Curr_Loc = P.Trmnl_Loc);
end Sp_Checking_Ops;