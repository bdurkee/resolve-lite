Facility Spiral_Test;
    uses Standard_Booleans,
         Standard_Integers;

    Facility Sp_Fac is Bdd_Spiral_Template
        (Std_Ints :: Integer, 2, 4)
        implemented by
            Sp_Array_Impl
            extended by Sp_Checking_Ops
                implemented by Sp_Checking_Ops_Impl;

    Operation Main ();
        Procedure
            Var P : Sp_Fac :: Spiral_Pos;
            Var x : Std_Ints :: Integer;

            Sp_Fac :: Lengthen(P, x);
            Sp_Fac :: Lengthen(P, x);

            Sp_Fac :: Spiral_Out(P);
            Sp_Fac :: Spiral_In(P);
            //Sp_Fac :: Lengthen(P, x);
            //Sp_Fac :: Spiral_Out(P);
            Std_Bools :: Write(Sp_Fac :: At_Edge(P));
    end Main;

end Spiral_Test;