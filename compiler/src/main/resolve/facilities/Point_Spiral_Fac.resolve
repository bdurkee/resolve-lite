Facility Point_Spiral_Fac;
    uses General_Purpose_Theory;

    Type Point = Record
            x, y : Std_Integer_Fac :: Integer;
        end;
        convention x <= 50 and y <= 50;

    Facility Sp_Fac is Bdd_Spiral_Template<Point>(3)
        implemented by Sp_Array_Impl;

    Oper Main();
        Procedure
            Var p : Point;
            Var h : Sp_Fac :: Spiral_Pos;
           -- Sp_Fac :: Lengthen(p, h);
    end Main;

end Point_Spiral_Fac;